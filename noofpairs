class Solution {
    int getPairsCount(int[] arr, int n, int k)
    {
        
        int count=0;
        
        for(int i=0;i<n;i++)
        {
            //int sum;
            for(int j=i+1;j<n;j++)
            {
               //sum=0;
               //=arr[i]+arr[j];
               if(arr[i]+arr[j]==k)
               {
                   count++;
               }
                
            }
        }
        return count;// code here
    }
}
